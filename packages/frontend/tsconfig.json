{
	"compilerOptions": {
		"allowJs": true,
		"noEmitOnError": false,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedParameters": false,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": false,
		"sourceMap": false,
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "Bundler",
		"removeComments": false,
		"noLib": false,
		"strict": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@vue-macros",
			"@types"
		],
		"types": [
			"reactivity-transform/macros-global"
		],
		"lib": [
			"esnext",
			"dom"
		],
		"jsx": "preserve",
		"skipLibCheck": true
	},
	"compileOnSave": false,
	"include": [
		".eslintrc.js",
		"./**/*.ts",
		"./**/*.vue"
	],
	"exclude": [
		".storybook/**/*",
		"lib/**/*",
		"test/**/*"
	]
}
