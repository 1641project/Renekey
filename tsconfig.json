{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./built/",
		"rootDir": "./src/",
		"removeComments": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"test/**/*",
	]
}
